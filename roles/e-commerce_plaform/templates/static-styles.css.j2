body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f8f8f8;
    overflow: auto; /* Allow scrolling */
}

header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
}

header h1 {
    margin: 0;
    font-size: 1.5em;
}

header a {
    color: white;
    text-decoration: none;
    background-color: #333;
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 0.9em;
}

main {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 5 columns */
    gap: 10px;
    padding: 20px;
    /* Remove fixed height */
}

.product {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: center;
    background-color: white;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
}

.product img {
    width: 80px;
    height: 80px;
    margin-bottom: 10px;
}

.product h2 {
    font-size: 1em;
    margin: 10px 0;
}

.product p {
    font-size: 0.9em;
    margin: 5px 0;
}

.add-to-cart {
    background-color: #4CAF50;
    color: white;
    padding: 5px 10px;
    border: none;
    cursor: pointer;
    font-size: 0.9em;
    border-radius: 5px;
}

.remove-from-cart {
    background-color: #f44336;
    color: white;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
    font-size: 0.9em;
    border-radius: 5px;
}

footer {
    background-color: #4CAF50;
    padding: 10px 20px;
    text-align: center;
    position: fixed; /* Ensure it stays at the bottom */
    width: 100%;
    bottom: 0;
}

#checkout {
    background-color: #fff;
    color: #4CAF50;
    padding: 10px;
    border: none;
    cursor: pointer;
    font-size: 1em;
    border-radius: 5px;
}
